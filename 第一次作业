//Author:WuShuo
//Date:9/28/2019
#include<stdio.h>
main(){
	int a,b,c,W,V,M;//定义整形变量 a（长） b（宽） c（高） W（重量）和 V（体积） M（价格） 
	printf("输入运输箱长(a) 宽(b) 高(c)\na b c\n");
	scanf("%d%d%d",&a,&b,&c);
	V=a*b*c;
	W=(V+165)/166;
	M=35*W;
	printf("邮件费用=%d",M);
} 
